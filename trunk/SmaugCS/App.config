  <!-- Section for system directories and file paths -->
  <SystemDataSection>
    <SystemDirectories>
      <add Name="Area" Path="area"/>
      <add Name="Player" Path="\player\"/>
      <add Name="Backup" Path="\backup\" />
      <add Name="God" Path="\gods\" />
      <add Name="Board" Path="\boards\" />
      <add Name="Clan" Path="\clans\" />
      <add Name="Council" Path="\councils\" />
      <add Name="Deity" Path="\deith\" />
      <add Name="Build" Path="\building\"/>
      <add Name="System" Path="\system\" />
      <add Name="Prog" Path="\mudprogs\" />
      <add Name="Corpse" Path="\corpses\" />
      <add Name="Class" Path="\classes\" />
      <add Name="Race" Path="\races\" />
      <add Name="Watch" Path="\watch\" />
      <add Name="Hotboot" Path="\hotboot\" />
      <add Name="Color" Path="\color\" />
    </SystemDirectories>
    <SystemFiles>
      <add Name="Areas" Filename="areas.lst" UseSystemFolder="false" />
      <add Name="Watches" Filename="watch.lst" />
    </SystemFiles>
  </SystemDataSection>
  
  <startup useLegacyV2RuntimeActivationPolicy="true"> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>

  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.Fileappender+MinimalLock"/>
      <file value="..\..\..\logs\"/>
      <datePattern value="'MUD_'MMddyyyy'.log'"/>
      <staticLogFileName value="false"/>
      <appendToFile value="true"/>
      <rollingStyle value="Composite"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="5MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="Header" value="[Session starts]"/>
        <param name="Footer" value="[Session ends]"/>
        <param name="ConversionPattern" value="%date [%thread] %-5level %appdomain.%logger.%method() â€“ %message%newline"/>
      </layout>
    </appender>
  </log4net>

  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="textWriterTraceListener" type="System.Diagnostics.TextWriterTraceListener" initializeData="..\..\..\logs\log4net.txt"/>
      </listeners>
    </trace>
  </system.diagnostics>
</configuration>
